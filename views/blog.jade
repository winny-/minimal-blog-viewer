html(lang=en)
  head
    if blog.name
      title=blog.name
    else
      title No such blog.
    style.
      body {
        font-family:sans-serif;
      }
      h1 {
        font-family:serif;
      }
  body
    if blog.name
      h1: a(href=blog.url)=blog.name
    else
      h1 No such blog.

    if blog.name
      if blog.description
        h2=blog.description

      hr

      if posts.items.length == 0
        p There are no posts.
      else
        h3: a(href=posts.items[0].url)=posts.items[0].title
        h4='By: '
          a(href=posts.items[0].author.url):=posts.items[0].author.displayName
          =' // Published: '+posts.items[0].published+' // Updated: '+posts.items[0].updated
        
        !=posts.items[0].content

        hr

        p(style='text-align:center;')='Copyright Â© '
          a(href=posts.items[0].author.url):=posts.items[0].author.displayName
          =' '+posts.items[0].updated
